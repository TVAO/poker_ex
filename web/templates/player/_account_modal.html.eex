<div id="player-account-modal" class="modal bottom-sheet">
  <div class="modal-content">
    <div class="row">
      <div class="col s12 center-align">
        <h4>Account Info</h4>
      </div>
      <div class="col m2 s12 center-align">
      <i class="large material-icons circle blue white-text">person_outline</i>
    </div>
    <div class="col m4 s12">
      <div class="col s12">
        <h5>Username: <%= humanize(@current_player.name) %></h5>
      </div>
      <div class="col s12">
        <h5>Chips: <span id="player-chips"><%= @current_player.chips %></span></h5>
      </div>
    </div>
    <div class="col m4 s12">
      <div class="col s12">
        <h5><%= link("Update account", to: player_path(@conn, :show, @current_player.id)) %></h5>
      </div>
    </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat"><i class="material-icons">close</i></a>
  </div>
</div>